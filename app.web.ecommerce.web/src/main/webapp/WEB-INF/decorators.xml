<decorators defaultdir="/WEB-INF/decorators">

    <decorator name="main_user" page="main_user.html">
        <pattern>/user/*</pattern>
    </decorator>
    
    <decorator name="main_admin" page="main_admin.html">
        <pattern>/admin/*</pattern>
    </decorator>

    <decorator name="default" page="main.html">
        <pattern>/registrasi/*</pattern>
        <pattern>/*</pattern>
    </decorator>
    
    <excludes>
        <pattern>/index.html</pattern>
        <pattern>content*</pattern>
        <pattern>/content*</pattern>
        <pattern>*comment-list*</pattern>
        <pattern>user/search/content*</pattern>
        <pattern>/user/search/content*</pattern>
        <pattern>/admin/product/info*</pattern>
        <pattern>/error/*</pattern>
    </excludes>
</decorators>
